def spiral1():
 while 1:
  for i in range(4):
   ledctrlf(l,from_middle,50,0,3,3)
  ledctrl(l,spiral,30,3,0)
  ledctrl(l,spiral,30,3,3)
  ledctrl(l,spiral,30,0,3)
  ledctrl(l,spiral,30,3,1)
  ledctrl(l,spiral,30,1,3)
  ledctrl(l,spiral,30,3,2)
  ledctrl(l,spiral,30,2,3)
  ledctrl(l,spiral,30,3,3)
  ledctrl(l,spiral,30,0,0)

def pong_ani():
 while 1:
  ledctrlc(l,pong,150,0)


